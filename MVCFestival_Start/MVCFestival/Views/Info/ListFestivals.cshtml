@model dynamic
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Other head elements like CSS files, meta tags can go here -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Location</th>
                <th>Price</th>
                <th>Stages Capacity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var festival in Model)
            {
                <tr>
                    <td>@festival.Name</td>
                    <td>@festival.Date.ToString("d")</td>
                    <td>@festival.Location</td>
                    <td>@festival.Price.ToString("C")</td>
                    <td>
                        <ul>
                            @foreach (var stage in festival.Stages)
                            {
                                <li>Capacity: @stage.Capacity</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
